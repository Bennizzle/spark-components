<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
    alpha.disabled="0.5" xmlns:supportClasses="com.patrickmowrer.components.supportClasses.*"
>

    <fx:Metadata>
        [HostComponent("com.patrickmowrer.components.supportClasses.SliderThumb")]
    </fx:Metadata> 
    
    <fx:Declarations>
        <fx:Component id="dataTip">     
            <supportClasses:SliderThumbDataTip minHeight="24" minWidth="40" y="-34">  
                <s:Rect top="0" left="0" right="0" bottom="0">
                    <s:fill>
                        <s:SolidColor color="0x000000" alpha=".9"/>
                    </s:fill>
                    <s:filters>
                        <s:DropShadowFilter angle="90" color="0x999999" distance="3"/>
                    </s:filters>
                </s:Rect>
                <s:Label text="{data}"
                         horizontalCenter="0" verticalCenter="1"
                         left="5" right="5" top="5" bottom="5"
                         textAlign="center" verticalAlign="middle"
                         fontWeight="normal" color="white" fontSize="11">
                </s:Label>
            </supportClasses:SliderThumbDataTip>
        </fx:Component>
    </fx:Declarations>
    
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>

    <s:Group id="contentGroup" left="0" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
        <s:layout>
            <s:HorizontalLayout />
        </s:layout>
        
        <s:Button id="button" skinClass="mx.skins.spark.SliderThumbSkin" />
    </s:Group>

</s:Skin>